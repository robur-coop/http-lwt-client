  "dune" {>= "2.0.0"}
  "cmdliner"
  "logs"
  "lwt"
  "base64" {>= "3.1.0"}
  "faraday-lwt-unix"
  "httpaf" {>= "0.7.0"}
  "tls" {>= "0.14.0"}
  "ca-certs"
  "fmt"
  "bos"
  "happy-eyeballs-lwt"
  "h2" {>= "0.8.0"}
]
conflicts: [ "result" {< "1.5"} ]
build: [
  ["dune" "subst"] {dev}
  ["dune" "build" "-p" name "-j" jobs]
]

synopsis: "A simple HTTP client using http/af, h2, and lwt"
